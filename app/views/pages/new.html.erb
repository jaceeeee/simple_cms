<% @page_title = "Create New Page" %>

<%= link_to("<< Back to List", pages_path(:subject_id => @subject.id), :class => 'back-link')
%>

<div class="pages new">
	<h2>Create Page</h2>

	<%= form_for(@page, :url => pages_path(:subject_id => @subject.id)) do |f| %>
		
		<!-- rendering partial layouts -->
		<%= render(:partial => 'form', :locals => {:f => f}) %>
		
		<div class="form-buttons">
			<%= f.submit("Create page") %>
		</div>
	<% end %>
</div>
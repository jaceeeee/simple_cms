<% @page_title = "Edit '#{@section.name}'" %>
<%= link_to("<< Back to index", sections_path(:page_id => @page.id), :class => 'back-link')
%>

<div class="sections edit">
	<h2>Update Section</h2>
	<%= form_for(@section, :url => section_path(@section, :page_id => @page.id), :method => 'patch') do |f| %>
	<!--You can ignore ":url => sections_path, :method => 'patch'" because it is automatically done by rails-->
		<!-- rendering partial layouts -->
		<%= render(:partial => 'form', :locals => {:f => f}) %>
		
		<div class="form-buttons">
			<%= f.submit("Update Section") %>
		</div>
	<% end %>
</div>